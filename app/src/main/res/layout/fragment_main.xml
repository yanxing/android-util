<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/padding16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/selectFile"
            style="@style/style_btn"
            android:text="调用系统文件管理器"/>
        <Button
            android:id="@+id/adapterButton"
            style="@style/style_btn"
            android:text="@string/adapterlibrary"/>
        <Button
            android:id="@+id/amap"
            style="@style/style_btn"
            android:text="@string/gao_de"/>

        <Button
            android:id="@+id/titleBar"
            style="@style/style_btn"
            android:text="@string/titleBar"/>

        <Button
            android:id="@+id/tabLayoutPager"
            style="@style/style_btn"
            android:text="@string/tablayout"/>
        <Button
            android:id="@+id/extendRecyclerView"
            style="@style/style_btn"
            android:text="@string/recyclerview"/>

        <Button
            android:id="@+id/sortListView"
            android:textAllCaps="false"
            style="@style/style_btn"
            android:text="@string/sortlistview"/>
        <Button
            android:id="@+id/selectCity"
            style="@style/style_btn"
            android:text="@string/city_select"/>
        <Button
            android:id="@+id/animation"
            style="@style/style_btn"
            android:text="@string/animation"/>
        <Button
            android:id="@+id/inputEditButton"
            style="@style/style_btn"
            android:text="@string/edittext_edittext_botton"/>
        <Button
            android:id="@+id/hideTitleBottom"
            style="@style/style_btn"
            android:text="@string/hide_title_bottom"/>
        <Button
            android:id="@+id/MPAndroidChart"
            style="@style/style_btn"
            android:text="MPAndroidChart图表"/>
        <Button
            android:id="@+id/tableView"
            style="@style/style_btn"
            android:text="tableView"/>
        <Button
            android:id="@+id/navigationTop"
            style="@style/style_btn"
            android:text="navigationTop"/>
        <Button
            android:id="@+id/mvvm"
            style="@style/style_btn"
            android:text="mvvmDemo"/>
        <Button
            android:id="@+id/workManager"
            style="@style/style_btn"
            android:visibility="gone"
            android:text="WorkManager例子"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
